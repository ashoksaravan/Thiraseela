<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ashoksm.thiraseela" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArtistListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_artist_list"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".TroupesListActivity"
            android:label="@string/title_activity_troupes_list"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ashoksm.thiraseela.MainActivity" />
        </activity>
        <activity
            android:name=".AcademyListActivity"
            android:label="@string/title_activity_academy_list"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ashoksm.thiraseela.MainActivity" />
        </activity>
        <activity
            android:name=".EventsListActivity"
            android:label="@string/title_activity_events_list"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ashoksm.thiraseela.MainActivity" />
        </activity>
        <activity
            android:name=".ArtistDetailActivity"
            android:label="@string/title_activity_artist_detail"
            android:parentActivityName=".ArtistListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ashoksm.thiraseela.ArtistListActivity" />
        </activity>
        <activity
            android:name=".TroupesDetailActivity"
            android:label="@string/title_activity_troupes_detail"
            android:parentActivityName=".TroupesListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ashoksm.thiraseela.TroupesListActivity" />
        </activity>
        <activity
            android:name=".AcademyDetailActivity"
            android:label="@string/title_activity_academy_detail"
            android:parentActivityName=".AcademyListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ashoksm.thiraseela.AcademyListActivity" />
        </activity>
        <activity
            android:name=".EventsDetailActivity"
            android:label="@string/title_activity_events_detail"
            android:parentActivityName=".EventsListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ashoksm.thiraseela.EventsListActivity" />
        </activity>
    </application>

</manifest>
